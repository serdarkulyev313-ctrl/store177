generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String         @id @default(cuid())
  title       String
  brand       String
  description String?
  condition   String
  isActive    Boolean        @default(true)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  images      ProductImage[]
  optionGroups OptionGroup[]
  variants    Variant[]
  orderItems  OrderItem[]
}

model ProductImage {
  id        String   @id @default(cuid())
  productId String
  url       String
  sortOrder Int      @default(0)
  createdAt DateTime @default(now())

  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId, sortOrder])
}

model OptionGroup {
  id        String       @id @default(cuid())
  productId String
  name      String
  type      String
  required  Boolean      @default(false)
  sortOrder Int          @default(0)
  values    OptionValue[]
  variants  VariantSelection[]

  product   Product      @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId, sortOrder])
}

model OptionValue {
  id        String   @id @default(cuid())
  groupId   String
  value     String
  sortOrder Int      @default(0)

  group     OptionGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  selections VariantSelection[]

  @@index([groupId, sortOrder])
}

model Variant {
  id         String   @id @default(cuid())
  productId  String
  sku        String?
  priceMode  String
  priceValue Int
  oldPrice   Int?
  stock      Int
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  product    Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  selections VariantSelection[]
  orderItems OrderItem[]

  @@index([productId])
}

model VariantSelection {
  id            String   @id @default(cuid())
  variantId     String
  groupId       String
  optionValueId String?
  value         String

  variant   Variant     @relation(fields: [variantId], references: [id], onDelete: Cascade)
  group     OptionGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  optionVal OptionValue? @relation(fields: [optionValueId], references: [id], onDelete: SetNull)

  @@index([variantId])
  @@index([groupId])
}

model Order {
  id            String     @id @default(cuid())
  tgUserId      Int?
  customerName  String?
  phone         String?
  method        String
  address       String?
  comment       String?
  total         Int
  orderStatus   String
  paymentStatus String
  createdAt     DateTime   @default(now())

  items         OrderItem[]
}

model OrderItem {
  id            String  @id @default(cuid())
  orderId       String
  productId     String
  variantId     String?
  titleSnapshot String
  priceSnapshot Int
  qty           Int

  order   Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  variant Variant? @relation(fields: [variantId], references: [id], onDelete: SetNull)

  @@index([orderId])
  @@index([productId])
}
